<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full p-10 min-h-full  bg-zinc-900 text-white">
        <div class="nav mb-10">
            <a class="cursor-pointer text-blue-500" href="/">Back to home</a>
        </div>
      <h1 class="text-3xl mb-3">All Users</h1>
      <div class="users flex gap-3 flex-wrap">
        <% if(users.length === 0) { %>
          <h1 class="text-xl text-zinc-500">No users found</h1>
        <% } %>
        <% users.forEach(function (user) {%>
          <div class="user w-[25%] p-4 bg-zinc-800 rounded-md">
            <div class="w-full h-60 rounded-md">
              <img class="w-full h-full object-cover rounded-md" src="<%= user.image %>" alt="">
            </div>
            <h3 class="text-xl mt-3"><%= user.name %></h3>
            <h5 class="text-zinc-400"><%= user.email %></h5>
            <div class="flex gap-3 mt-5">
              <a class="text-yellow-400" href="/edit/<%= user._id %>">Edit User</a>
              <a class="text-red-500" href="/delete/<%= user._id  %>">Delete User</a>
            </div>
          </div>
        <%}) %>
        
        
      </div>
    </div>
  </body>
</html>
